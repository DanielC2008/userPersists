doctype html
html
	head
		title Persists
	body
		h1 Login
		form(method='POST')
			.form-group
			label(for='email') Email:
			input.form-control(type='text' name='email' placeholder='you@example.com' required)
			.form-group
			label(for='password') Password:
			input.form-control(type='password' name='password' placeholder='*************' required)
			.form-group
			button Cancel
			button(type='submit') Login
